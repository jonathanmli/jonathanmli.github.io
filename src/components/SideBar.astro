---
import SideBarFooter from "./SideBarFooter.astro";
import { Image } from "astro:assets";
import SideBarMenu from "./SideBarMenu.astro";
const { sideBarActiveItemID } = Astro.props;
---

<div class="drawer-side z-40">
  <label for="my-drawer" class="drawer-overlay"></label>
  <aside class="px-2 pt-2 h-auto min-h-full w-[19rem] bg-base-200 text-base-content flex flex-col">
    <div class="flex flex-col items-center text-center mt-6 mb-6 gap-4">
      <a href="/" class="group w-fit">
        <div class="avatar transition ease-in-out group-hover:scale-[102%] block m-auto">
          <div class="w-[8.5rem]">
            <Image class="mask mask-circle" format="png" width={300} height={300} src="/profile.png" alt="Profile image" />
          </div>
        </div>
      </a>
      <div class="sidebar-name text-base-content">
        <span class="sidebar-name__first">Jonathan</span>
        <span class="sidebar-name__last">
          <span class="sidebar-name__inner">
            <span>Li</span>
            <span>Light</span>
            <span>明</span>
            <span>アキラ</span>
            <span>명</span>
          </span>
        </span>
      </div>
    </div>
    <SideBarMenu sideBarActiveItemID={sideBarActiveItemID} />
    <SideBarFooter />
  </aside>
</div>

<style>
  .sidebar-name {
    line-height: 1.2;
    font-size: 1.55rem;
    font-weight: 700;
  }

  .sidebar-name__first {
    display: block;
  }

  .sidebar-name__last {
    position: relative;
    display: block;
    margin-top: 0.35rem;
    height: 1.55rem;
    overflow: hidden;
  }

  .sidebar-name__inner {
    display: block;
    line-height: 1.55rem;
    animation: sidebarSlideName 10s infinite;
  }

  .sidebar-name__inner > span {
    display: block;
    height: 1.55rem;
  }

  @keyframes sidebarSlideName {
    0% {
      transform: translateY(0);
    }
    10% {
      transform: translateY(0);
    }
    20% {
      transform: translateY(-1.55rem);
    }
    30% {
      transform: translateY(-1.55rem);
    }
    40% {
      transform: translateY(-3.1rem);
    }
    50% {
      transform: translateY(-3.1rem);
    }
    60% {
      transform: translateY(-4.65rem);
    }
    70% {
      transform: translateY(-4.65rem);
    }
    80% {
      transform: translateY(-6.2rem);
    }
    90% {
      transform: translateY(-6.2rem);
    }
    100% {
      transform: translateY(0);
    }
  }

  @media (prefers-reduced-motion: reduce) {
    .sidebar-name__inner {
      animation: none;
    }
  }
</style>
